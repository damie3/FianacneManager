@model FinanceManager.ViewModels.Reports.SavingsReport.SavingsReportViewModel

@{
    ViewBag.Title = "SavingsReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Savings Report</h2>
<br />
<div class="container col-12">
    <div class="row">
        <div class="col-2">
            Savings To Date:
        </div>
        <div class="col-3 text-right">
            Expected: @Html.DisplayFor(m => Model.ExpectedSavingsToDate)
        </div>
        <div class="col-3 text-right">
            Actual: @Html.DisplayFor(m => Model.ActualSavingsToDate)
        </div>
    </div>
</div>

@foreach (var item in Model.ViewModelItems)
{
    var itemId = "SR" + item.Period.Name.Replace(" ", "").Replace("/", "");
    <div class="row pb-2">
        <div class="container col-lg-8 col-12">

            <div class="card">
                <div class="card-header" data-toggle="collapse" data-target="#@itemId"
                     href="#@itemId">
                    <div class="row">
                        <div class="col-7">
                            <span class="font-weight-bold">@Html.Label("Period"): </span> @Html.DisplayFor(groupName => item.Period.Name)
                        </div>
                        <div class="col-5 text-right">
                            <span class="font-weight-bold">Aggregated:</span> @Html.DisplayFor(periodTotal => item.AggregatedAmount)
                        </div>
                    </div>
                </div>
                <div id="@itemId" class="card-body panel-collapse collapse in">
                    <div class="row">
                        <div class="col-lg-4 col-4 ">
                            @Html.Label("")
                        </div>
                        <div class="col-lg-4 col-4 text-right ">
                            @Html.Label("Budgeted")
                        </div>
                        <div class="col-lg-4 col-4 text-right">
                            @Html.Label("Saved")
                        </div>
                    </div>
                    <div class="row" style="border-top: 1px solid lightgray">
                        <div class="col-lg-4 col-4">
                            @Html.Label("Savings1")
                        </div>
                        <div class="col-lg-4 col-4 text-right">
                            @Html.DisplayFor(transactionAccount => item.Savings1BudgetedAmount)
                        </div>
                        <div class="col-lg-4 col-4 text-right">
                            @Html.DisplayFor(transactionAccount => item.Savings1Amount)
                        </div>
                    </div>
                    <div class="row" style="border-top: 1px solid lightgray">
                        <div class="col-lg-4 col-4 ">
                            @Html.Label("Savings2")
                        </div>
                        <div class="col-lg-4 col-4 text-right">
                            @Html.DisplayFor(transactionAccount => item.Savings2BudgetedAmount)
                        </div>
                        <div class="col-lg-4 col-4 text-right">
                            @Html.DisplayFor(transactionAccount => item.Savings2Amount)
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container col-lg-4"></div>
    </div>
}


